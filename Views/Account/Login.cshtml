@model MyApp.Web.Models.Auth.LoginRequest
@{
    Layout = null; // standalone login page
}

<style>
    body {
        background: linear-gradient(120deg, #007bff, #00bcd4);
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        margin: 0;
        padding: 0;
        height: 100vh;
        display: flex;
        justify-content: center;
        align-items: center;
    }

    .login-container {
        background-color: #ffffff;
        width: 350px;
        padding: 40px 30px;
        border-radius: 10px;
        box-shadow: 0 8px 16px rgba(0, 0, 0, 0.25);
        text-align: center;
    }

    .login-container h2 {
        margin-bottom: 30px;
        color: #333;
    }

    .login-container form {
        display: flex;
        flex-direction: column;
        gap: 15px;
    }

    .login-container label {
        text-align: left;
        font-weight: 600;
        color: #555;
    }

    .login-container input {
        padding: 10px;
        border: 1px solid #ccc;
        border-radius: 6px;
        transition: 0.3s;
    }

    .login-container input:focus {
        border-color: #007bff;
        outline: none;
        box-shadow: 0 0 3px #007bff;
    }

    .login-container button {
        background-color: #007bff;
        color: white;
        padding: 10px;
        border: none;
        border-radius: 6px;
        cursor: pointer;
        font-weight: 600;
        transition: 0.3s;
    }

    .login-container button:hover {
        background-color: #0056b3;
    }

    .validation-error {
        color: red;
        font-size: 0.9em;
        text-align: left;
    }
</style>

<div class="login-container">
    <h2>Client Login</h2>

    <form asp-action="Login" method="post">
        <div>
            <label asp-for="Username"></label>
            <input asp-for="Username" />
            <span asp-validation-for="Username" class="validation-error"></span>
        </div>

        <div>
            <label asp-for="Password"></label>
            <input asp-for="Password" type="password" />
            <span asp-validation-for="Password" class="validation-error"></span>
        </div>

        <button type="submit">Login</button>
    </form>

    @if (!string.IsNullOrEmpty(ViewBag.Message))
    {
        <div style="margin-top:15px; color:red;">
            @ViewBag.Message
        </div>
    }
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
