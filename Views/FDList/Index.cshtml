@using iText.StyledXmlParser.Jsoup.Parser
@model IEnumerable<MyApp.Web.Models.FD.FDModel>

@{
    ViewData["Title"] = "FD List";
}

<h2>Fixed Deposit List</h2>

@if (ViewBag.Token != null)
{
    <p><strong>Your Token:</strong> @ViewBag.Token</p>
}

<div class="fd-grid">
    @foreach (var fd in Model)
    {
        <div class="fd-card">
            <div class="fd-row"><strong>ID:</strong> @fd.Id</div>
            <div class="fd-row"><strong>Amount (â‚¹):</strong> @fd.Amount.ToString("N2")</div>
            <div class="fd-row"><strong>Interest Rate (%):</strong> @fd.InterestRate</div>
            <div class="fd-row"><strong>Maturity Date:</strong>@(fd?.MaturityDate?.ToString("dd-MMM-yyyy"))</div>
            <div class="fd-row">
                <strong>Download:</strong>
                <a href="@Url.Action("DownloadPdf", "FDList", new { id = fd.Id , token = ViewBag.Token})"
                target="_blank"
                title="Download PDF">
                    <img src="~/images/pdf-icon.png" width="25" height="25" alt="PDF" />
                </a>
            </div>
        </div>
    }
</div>

<style>
    /* ðŸ§­ General Page Styling */
    body {
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        margin: 20px;
        background-color: #f8f9fa;
    }

    h2 {
        color: #0056b3;
        margin-bottom: 20px;
    }

    /* ðŸ§© 3-column grid layout */
    .fd-grid {
        display: grid;
        grid-template-columns: repeat(3, 1fr);
        gap: 20px;
    }

    /* ðŸ“± Responsive layout for tablets */
    @@media (max-width: 992px) {
        .fd-grid {
            grid-template-columns: repeat(2, 1fr);
        }
    }

    /* ðŸ“± Responsive layout for mobile */
    @@media (max-width: 600px) {
        .fd-grid {
            grid-template-columns: 1fr;
        }
    }

    /* ðŸŽ´ FD Card Design */
    .fd-card {
        background: #ffffff;
        border: 1px solid #dee2e6;
        border-radius: 8px;
        padding: 15px 20px;
        box-shadow: 0px 2px 6px rgba(0,0,0,0.1);
        transition: transform 0.2s ease, box-shadow 0.2s ease;
        min-height: 180px;
    }

    .fd-card:hover {
        transform: translateY(-4px);
        box-shadow: 0px 4px 10px rgba(0,0,0,0.15);
    }

    .fd-row {
        margin-bottom: 8px;
        font-size: 14px;
    }

    .fd-row strong {
        color: #0056b3;
        margin-right: 5px;
    }

    a img {
        vertical-align: middle;
        transition: transform 0.2s ease;
    }

    a:hover img {
        transform: scale(1.2);
    }
</style>
